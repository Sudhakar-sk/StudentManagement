@model StudentManagement.Core.Models.StaffLoginDetails
@{
    ViewData["Title"] = "Login";
}
<link href="~/css/Login.css" rel="stylesheet" />


<div class="container">
    <div class="contain">
        <div class="main">
            <p class="sign" align="center">Log in</p>
            @using (Html.BeginForm("StaffLogin", "StudentController1", FormMethod.Post, new { @id = "formDetails", @autocomplete = "off" }))
            {
                <div class="form1">
                    <div class="form-group">
                        @Html.EditorFor(Modal => Modal.UserName, new
                        {
                            HtmlAttributes = new
                            {
                                @name = "UserName",
                                @id = "user",
                                @type = "text",
                                @class = "un",
                                @placeholder = "Username",
                                @maxlength = "50",
                                @align = "center",
                                @*required = "true"*@
}
})
                        @*@Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })*@
                    </div>

                    @*<input class="un " type="text" align="center" placeholder="Username">*@
                    <div class="form-group">
                        @Html.EditorFor(Modal => Modal.Password, new
                        {
                            HtmlAttributes = new
                            {
                                @name = "Password",
                                @type = "password",
                                @class = "pass",
                                @placeholder = "Password",
                                @maxlength = "50",
                                @align = "center",
                                @*@required = "true"*@
}
})
                        @*@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger " })*@
                    </div>

                    @*<input class="pass" type="password" align="center" placeholder="Password">*@
                    <button class="submit" type="submit" align="center" onclick="SubmitDetails">Log in</button>
                    @*<p class="forgot" align="center"><a href="#">Forgot Password?></a></p>*@
                </div>
            }
        </div>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<script>
    $(function () {
        debugger;
        $("#formDetails").validate({
            rules:
            {
                UserName: {
                    required: true,

                },

                Password: {
                    required: true,
                    minlength: 4,
                    maxlength: 8
                }


            },
            messages:
            {
                UserName: {
                    required: "Name is required",

                },
                Password:
                {
                    required: "Password is required",
                    minlength: "Password should have miminum of 4 characters",
                    maxlength: "Password should have maximum of 8 charaacters"
                }
            }
        });
    });

    function SubmitDetails() {
        if ($("#formDetails").valid()) {
            $("#formDetails").submit();
        }
    }


</script>

